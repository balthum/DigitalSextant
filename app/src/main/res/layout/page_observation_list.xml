<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_observation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icon_backgrond">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listView_observation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:listSelector="@drawable/selector"
        android:layout_below="@+id/textView1"
        android:layout_above="@+id/calculate_button"/>

    <TextView
        android:id="@+id/textViewAZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewObsh"
        android:text="Az = Compass Heading"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textViewObsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewAZ"
        android:layout_alignParentEnd="true"
        android:text="OBSh = Observation Height"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11sp"
        android:textStyle="bold|italic" />

</RelativeLayout>
